<!DOCTYPE html>
@using SAIM.Core.BusinessObjects.Model;
@{
    var usertemp = (string)ViewBag.LoginName;
    var elements = (List<string>)ViewBag.Elements;
    var rolename = (string)ViewBag.RoleName;
}


<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Telfair</title>

    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/all.min.css">
    <link rel="stylesheet" href="~/css/ionicons.min.css">
    <link rel="stylesheet" href="~/css/jquery-jvectormap.css">
    <link rel="stylesheet" href="~/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/css/notifications.css">
    <link rel="stylesheet" href="~/dist/css/skins/_all-skins.min.css">
    <link rel="stylesheet" href="~/css/pagination.css" />
    <script src="~/js/notifications.js"></script>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
          asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
          asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    <link rel="stylesheet" href="~/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="~/dist/css/skins/_all-skins.min.css">
    <link rel="stylesheet" href="~/css/pagination.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>

<body class="hold-transition skin-blue sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="/Home/HomePage" class="logo">
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg" style="font-size: 17px;">Telfair Website</span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button" onclick="pushmenu()">
                    <i class="fas fa-align-justify"></i>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                @{
                                    if (rolename != null && rolename == "administrator")
                                    {
                                        <img src="~/img/Admin.png" class="user-image" alt="User Image">
                                        <span class="hidden-xs">@usertemp</span>
                                    }
                                    else
                                    {
                                        <img src="~/img/unknown.png" class="user-image" alt="User Image">
                                        <span class="hidden-xs">@usertemp</span>
                                    }
                                }
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    @{
                                        if (rolename != null && rolename == "administrator")
                                        {
                                            <img src="~/img/Admin.png" class="img-circle" alt="User Image">
                                        }
                                        else
                                        {
                                            <img src="~/img/unknown.png" class="user-image" alt="User Image">
                                        }
                                    }


                                    @{
                                        if (usertemp != null && usertemp.ToString().ToLower() == "charon")
                                        {
                                            <p>
                                                Welcome Charon Potié(Joseph)  - Executive Director
                                            </p>
                                        }
                                        else if (usertemp != null)
                                        {
                                            <p>
                                                Welcome @usertemp
                                            </p>

                                        }
                                    }
                                </li>

                                <!-- Menu Footer-->
                                <li class="user-footer">

                                    <div class="pull-right">
                                        <a href="/Home/Logout" class="btn btn-reddit btn-flat">Sign out</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- =============================================== -->
        <!-- Left side column. contains the sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        @{
                            if (usertemp != null && usertemp.ToString().ToLower() == "charon")
                            { <img src="~/img/Team- Charon Potie.jpg" class="img-bordered-sm" alt="User Image"> }

                            else if (usertemp != null)
                            { <img src="~/img/unknown.png" class="img-bordered-sm" alt="User Image"> }

                        }
                    </div>
                    <div class="pull-left info">
                        @{
                            if (usertemp != null && usertemp.ToString().ToLower() == "charon")
                            { <p>Charon Potié(Joseph)</p> }

                            else if (usertemp != null)
                            { <p>@usertemp</p> }
                        }

                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">MAIN NAVIGATION</li>
                    @{
                        @if (elements.Contains("Department"))
                        {
                            <li class="treeview">
                                <a href="#" id="department-link">
                                    <i class="fa fa-laptop"></i>
                                    <span>Department</span>
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    @if (elements.Contains("New Department"))
                                    {
                                        <li><a href="/Department/Department"><i class="fa fa-plus"></i> New</a></li>
                                    }
                                    @if (elements.Contains("Manage Department"))
                                    {
                                        <li><a href="/Department/ViewDepartment"><i class="fa fa-list-alt"></i> Manage</a></li>
                                    }
                                </ul>
                            </li>
                        }
                        @if (elements.Contains("Grade"))
                        {
                            <li class="treeview">
                                <a href="#" id="level-link">
                                    <i class="fas fa-book-reader"></i> <span>Grade</span>
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    @if (elements.Contains("New Grade"))
                                    {
                                        <li><a href="/Level/Level"><i class="fa fa-plus"></i> New</a></li>
                                    }
                                    @if (elements.Contains("Manage Grade"))
                                    {
                                        <li><a href="/Level/ViewLevel"><i class="fa fa-list-alt"></i>Manage </a></li>
                                    }
                                </ul>
                            </li>
                        }

                        @if (elements.Contains("Subject"))
                        {
                            <li class="treeview">
                                <a href="#" id="subject-link">
                                    <i class="fa fa-table"></i> <span>Subject</span>
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    @if (elements.Contains("New Subject"))
                                    {
                                        <li><a href="/Subject/Subject"><i class="fa fa-plus"></i> New</a></li>
                                    }
                                    @if (elements.Contains("Manage Subject"))
                                    {
                                        <li><a href="/Subject/ViewSubject"><i class="fa fa-list-alt"></i>Manage </a></li>
                                    }
                                </ul>
                            </li>
                        }
                        if (elements.Contains("Weekly Plan"))
                        {
                            <li class="treeview">
                                <a href="#" id="plan-link">
                                    <i class="far fa-chart-bar"></i>
                                    <span>Weekly Plan</span>
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">

                                    @if (elements.Contains("New Plan"))
                                    {
                                        <li><a href="/Plan/Plan"><i class="fa fa-plus"></i> New</a></li>
                                    }
                                    @if (elements.Contains("View Plans"))
                                    {
                                        <li><a href="/Plan/ViewMyPlan"><i class="fa fa-eye"></i> View Plan</a></li>
                                    }
                                    @if (elements.Contains("View My Plan"))
                                    {
                                        <li><a href="/Plan/ViewMyPlan"><i class="fa fa-list-alt"></i> View My Plan</a></li>
                                    }
                                </ul>
                            </li>
                        }
                        if (elements.Contains("Curriculum"))
                        {
                            <li class="treeview">
                                <a href="#" id="curriculum-link">
                                    <i class="fas fa-clipboard-list"></i>
                                    <span>Curriculum</span>
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    @if (elements.Contains("New Curriculum"))
                                    {
                                        <li><a href="/Curriculum/Curriculum"><i class="fa fa-plus"></i> New</a></li>

                                    }
                                    @if (elements.Contains("View Curriculum"))
                                    {
                                        <li><a href="/Curriculum/ViewCurriculum"><i class="fa fa-eye"></i> View</a></li>
                                    }
                                    @if (elements.Contains("Manage Curriculum"))
                                    {
                                        <li><a href="/Curriculum/ViewCurriculum"><i class="fa fa-list-alt"></i> Manage</a></li>
                                    }
                                </ul>
                            </li>
                        }
                        @if (elements.Contains("Objectives"))
                        {
                            <li class="treeview">
                                <a href="#" id="lesson-link">
                                    <i class="far fa-dot-circle"></i> <span>Objectives</span>
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    @if (elements.Contains("New Objective"))
                                    {
                                        <li><a href="/Lesson/Lesson"><i class="fa fa-plus"></i>New</a></li>
                                    }
                                    @if (elements.Contains("Manage Objective"))
                                    {
                                        <li><a href="/Lesson/ViewLesson"><i class="fa fa-list-alt"></i>Manage</a></li>
                                    }
                                </ul>
                            </li>
                        }
                        @if (elements.Contains("User"))
                        {
                            <li class="treeview">
                                <a href="#" id="user-link">
                                    <i class="fas fa-users"></i> <span>User</span>
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    @if (elements.Contains("New User"))
                                    {
                                        <li><a href="/Employee/Employee"><i class="fa fa-plus"></i> New</a></li>
                                    }
                                    @if (elements.Contains("Manage User"))
                                    {
                                        <li><a href="/Employee/ViewEmployee"><i class="fa fa-list-alt"></i>Manage </a></li>
                                    }
                                </ul>
                            </li>


                        }
                        @if (elements.Contains("News"))
                        {
                            <li class="treeview">
                                <a href="#" id="blog-link">
                                    <i class="far fa-newspaper"></i> <span>News</span>
                                    <span class="pull-right-container">
                                        <i class="fa fa-angle-left pull-right"></i>
                                    </span>
                                </a>
                                <ul class="treeview-menu">
                                    @if (elements.Contains("New"))
                                    {
                                        <li><a href="/Blog/Blog"><i class="fa fa-plus"></i> New</a></li>
                                    }
                                    @if (elements.Contains("Manage News"))
                                    {
                                        <li><a href="/Blog/ViewBlog"><i class="fa fa-list-alt"></i>Manage </a></li>
                                    }
                                </ul>
                            </li>
                        }
                    }
                    @if (elements.Contains("HomeWork"))
                    {
                        <li class="treeview">
                            <a href="#" id="homework-link">
                                <i class="fas fa-book"></i> <span>HomeWork</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                @if (elements.Contains("New HomeWork"))
                                {
                                    <li><a href="/HomeWork/HomeWork"><i class="fa fa-plus"></i> New</a></li>
                                }
                                @if (elements.Contains("Manage HomeWork"))
                                {
                                    <li><a href="/HomeWork/ViewManage"><i class="fa fa-list-alt"></i>Manage </a></li>
                                }
                                @if (elements.Contains("View HomeWork"))
                                {
                                    <li>
                                        <a href="#"><i class="fa fa-eye"></i>View </a>
                                        <ul class="treeview-menu" style="display: block;" id="ulgrade">
                                            <li><a href="#"><i class="fa fa-spinner fa-pulse"></i> Loading submenu...</a></li>
                                        </ul>
                                        <script type="text/javascript">
                                            load_my_children_grade()
                                        </script>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                    }
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- =============================================== -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">


            <section class="content container-fluid">
                <!-- Body -->
                @RenderBody()

            </section>

        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> CONCEPT
            </div>
            <strong>Copyright &copy; @DateTime.Now.Year <a href="https://www.saimltd.mu">Telfair</a>.</strong> All rights
            reserved.
        </footer>


    </div>
    <script src="~/js/jquery-ui.min.js"></script>
    <script>
        $.widget.bridge('uibutton', $.ui.button);
    </script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.sparkline.min.js"></script>
    <!-- jvectormap  -->
    <script src="~/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="~/js/jquery.knob.min.js"></script>
    <!-- daterangepicker -->
    <script src="~/js/moment.min.js"></script>
    <script src="~/js/daterangepicker.js"></script>
    <!-- datepicker -->
    <script src="~/js/bootstrap-datepicker.min.js"></script>
    <!-- Bootstrap WYSIHTML5 -->
    <script src="~/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <!-- SlimScroll -->
    <script src="~/js/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/js/fastclick.js"></script>
    <!-- ChartJS -->
    <script src="~/js/Chart.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="~/dist/js/demo.js"></script>
    <script src="~/js/Pagination.js"></script>
    <script src="~/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>
    <script src="~/dist/js/demo.js"></script>
    <script>
        $(document).ready(function () {
            $('.sidebar-menu').tree()
        });
    </script>
    <script type="text/javascript">
        var close = true, closemobile = false;
        function pushmenu() {
            if (window.innerWidth >= 768) {
                if (close) {
                    document.body.classList.add("layout-fixed");
                    document.body.classList.add("layout-navbar-fixed");
                    document.body.classList.add("sidebar-collapse");
                }
                else {
                    document.body.classList.remove("layout-fixed");
                    document.body.classList.remove("layout-navbar-fixed");
                    document.body.classList.remove("sidebar-collapse");
                }
                close = !close;
            }
            else {
                if (closemobile) document.body.classList.add("sidebar-open");
                else document.body.classList.remove("sidebar-open");
                closemobile = !closemobile;
            }
        }
    </script>
    @RenderSection("Scripts", required: false)
</body>

</html>
